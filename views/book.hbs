<div class="row">
  <h2>{{bookDetails.title}}</h1>
</div>
<div class="row">
  <div class="col-md-6"><img src="{{bookDetails.image_url}}" alt=""></div>
  <div class="col-md-6">
    <h3>Authors:</h3>
    <p>
      {{#each authors}}{{#if @index}}, {{/if}}{{this}}{{/each}}
    </p>


  <p>Pages: {{bookDetails.pages}}</p>
  <p>Rating: {{bookDetails.rating}} ({{bookDetails.review_count}})</p>
  <p>
    Genres:
    {{#each genres}}{{#if @index}}, {{/if}}{{this}}{{/each}}
  </p>
  <form action="/reviews/{{bookDetails.book_id}}" method="get">
    <button type="submit" class="btn btn-info">Find Reviews</button>
  </form>
</div>
</div>
